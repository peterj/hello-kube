<div>
    <h1>Hello {{name}}</h1>
    <h3>Running on: {{hostname}}</h3>

    <div>
        <h3>Environment variables</h3>
        <div>

            {{#each environmentVars}}
            <p>
                {{@key}} = {{this}}
            </p>
            {{/each}}
        </div>
    </div>

    <div>
        <h3>Secrets</h3>
        <div>
            {{files}}
        </div>
    </div>
</div>